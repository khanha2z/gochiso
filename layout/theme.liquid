<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
  {{ 'application.css' | asset_url | stylesheet_tag }}
  {{ 'style.css' | asset_url | stylesheet_tag }}
  {{ 'style-sm.css' | asset_url | stylesheet_tag }}
  
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" defer></script>
  <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js" defer></script>
  <script src="{{ 'wow.min.js' | asset_url }}" defer></script>
  <script src="{{ 'application.js' | asset_url }}" defer></script>
</head>
<body>
    {% section 'header' %}
  {% comment %} {% for link in linklists.main-menu.links %}
    {% assign child_list_handle = link.title | handleize %}
    {% if linklists[child_list_handle].links != blank %}
      <a href="{{ link.url }}">{{ link.title }}</a>
      [{% for childlink in linklists[child_list_handle].links %}
        <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
      {% endfor %}]
    {% else %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endif %}
  {% endfor %}


  {% if shop.customer_accounts_enabled %}
    {% if customer %}
      <a href="/account">account</a>
      {{ 'log out'  | customer_logout_link }}
    {% else %}
      {{ 'log in ' | customer_login_link }}
      {{ 'register' | customer_register_link }}
    {% endif %}
  {% endif %} {% endcomment %}

  <main role="main">
    {{ content_for_layout }}
  </main>
  <footer>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                    <div class="box-footer-logo pt-5">
                        <div class="logo">
                            <img src="{{ 'logo-footer.png' | asset_url  }}" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-12">
                    <div class="list-link-footer">
                        <a href="#">トップページ</a>
                        <a href="#">お知らせ</a>
                        <a href="#">ふるさとごちそうモールについて</a>
                        <a href="#">特定商取引法に基づく表記</a>
                        <a href="#">よくある質問</a>
                    </div>
                </div>
                <div class="col">
                    <div class="list-link-footer">
                        <a href="#">商品一覧</a>
                        <a href="#" class="sub-link">雲南市</a>
                        <a href="#" class="sub-link">浜田市</a>
                        <a href="#" class="sub-link">出雲市</a>
                        <a href="#">お問い合わせ</a>
                    </div>
                </div>
                <div class="col">
                    <p class="info-footer">
                        受付時間：10:00~19:00 
                    </p>
                </div>
            </div>
            <hr class="hr-footer">
            <div class="row align-items-center">
                <div class="col-lg-6 col-sm-12">
                    <div class="col-inner">
                        <div class="footer-copyright">
                            © 2024, ふるさとごちそうモール Powered by Shopify
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <div class="col-inner">
                        <div class="list-pay">
                            <img src="./assets/images/visa.png" alt="">
                            <img src="./assets/images/apple.png" alt="">
                            <img src="./assets/images/gg-pay.png" alt="">
                            <img src="./assets/images/mastercard.png" alt="">
                            <img src="./assets/images/amex.png" alt="">
                            <img src="./assets/images/paypal.png" alt="">
                            <img src="./assets/images/jcb.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="go-top">
        <a href="#" class="btn-go-top">
            <i class="fas fa-chevron-circle-up"></i>
        </a>
    </div>
    
</footer>
</body>
</html>
