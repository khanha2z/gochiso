{% comment %} {% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
{% for image in product.images %}
  <a href="{{ image.src | img_url: 'large' }}">
    <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
  </a>
{% endfor %}
<h1>{{ product.title }}</h1>
<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id }}">
          {{ variant.title }} - {{ variant.price | money_with_currency }}
        </option>
      {% else %}
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
  {{ current_variant.price | money }}
  <label for="Quantity">quantity</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1">
  <button type="submit" name="add" id="AddToCart">Add to cart</button>
</form>
<div>{{ product.description }}</div> {% endcomment %}
{% assign current_variant = product.selected_or_first_available_variant %}
<section>
    <div class="page-header">
        <div class="container">
            <div class="cloud-1">
                <img src="{{"cloud-1.svg" | asset_url}}" alt="">
            </div>
            <div class="cloud-2">
                <img src="{{"cloud-1.svg" | asset_url}}" alt="">
            </div>
            <div class="cloud-3">
                <img src="{{"cloud-1.svg" | asset_url}}" alt="">
            </div>
            <div class="cloud-4">
                <img src="{{"cloud-1.svg" | asset_url}}" alt="">
            </div>
            <h2 class="title-en">Product Details</h2>
            <h3 class="title-jp">商品詳細</h3>
        </div>
        <div class="bg-anim-1"></div>
        <div class="bg-anim-2"></div>
        <div class="bg-anim-3"></div>
    </div>
  </section>
  {% render 'breadcrumbs' %}
<section id="selling-product">
  <div class="container px-3 px-md-5 padding-medium">
      <div class="row">
          <div class="col-lg-6">
              <div class="row g-2">
                  <div class="col-md-3 d-none d-lg-flex">
                      <!-- product-thumbnail-slider -->
                      <div class="swiper product-thumbnail-slider">
                          <div class="swiper-wrapper">
                              {% for image in product.images %}
                                <div class="swiper-slide">
                                  <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
                                </div>
                              {% endfor %}
                          </div>
                      </div>
                      <!-- / product-thumbnail-slider -->
                  </div>
                  <div class="col-md-9">
                      <!-- product-large-slider -->
                      <div class="swiper product-large-slider">
                          <div class="swiper-wrapper">
                              {% for image in product.images %}
                                <div class="swiper-slide">
                                  <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
                                </div>
                              {% endfor %}
                          </div>
                      </div>
                  </div>
                      <!-- / product-large-slider -->
              </div>
          </div>
          <div class="col-lg-6">
              <div class="product-info">
                  <div class="element-header">
                      <h2 itemprop="name" class="title-product">{{ product.title }}</h2>
                      <div class="rating-container d-flex gap-0 align-items-center">
                          <div class="box-star">
                              <span class="fa fa-star checked"></span>
                              <span class="fa fa-star checked"></span>
                              <span class="fa fa-star checked"></span>
                              <span class="fa fa-star"></span>
                              <span class="fa fa-star"></span>
                              <p>5.0</p>
                          </div>
                      </div>
                  </div>
                  <hr>
                  <div class="product-price pt-3 pb-3">
                      <strong>{{ current_variant.price | money }}</strong><del class="ms-2">{{ current_variant.compare_at_price | money }}</del>
                  </div>
                  <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
                    {% comment %} <label for="Quantity">quantity</label> {% endcomment %}
                    <select name="id" id="productSelect" class="d-none">
                        {% for variant in product.variants %}
                            {% if variant.available %}
                            <option value="{{ variant.id }}">
                                {{ variant.title }} - {{ variant.price | money_with_currency }}
                            </option>
                            {% else %}
                            <option disabled="disabled">
                                {{ variant.title }} - sold out
                            </option>
                            {% endif %}
                        {% endfor %}
                    </select>
                    <input type="text" id="productSelect" value="{{ variant.id }}" hidden>
                    <div class="cart-wrap">
                        <div class="product-quantity pt-2">
                            <div class="stock-button-wrap">
                                <div class="d-flex flex-wrap align-items-center gap-2">
                                    <span>購入数</span>
                                    <div class="input-group product-qty align-items-center w-50 me-3">
                                        <span class="input-group-btn">
                                            <button type="button"
                                                class="quantity-left-minus btn btn-light btn-number"
                                                data-type="minus">
                                                -
                                            </button>
                                        </span>
                                        <input type="text" id="quantity" name="quantity"
                                            class="form-control input-number text-center p-2 mx-1" value="1">
                                        <span class="input-group-btn">
                                            <button type="button"
                                                class="quantity-right-plus btn btn-light btn-number"
                                                data-type="plus" data-field="">
                                                +
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-product-button">
                        <button type="submit" name="add" id="AddToCart">カートに入れる</button>
                        <button type="submit" id="checkout" class="cart__checkout-button buynow button" name="checkout" form="cart">
                            で購入
                        </button>
                    </div>
                  </form>

              </div>
          </div>
      </div>
  </div>
</section>
<section>
  <div class="container">
      <div class="product-infor">
          <div class="row">
              <div class="col-lg-9">
                  <div class="col-inner">
                      <nav>
                          <div class="nav nav-underline d-flex" id="nav-tab" role="tablist">
                              <button class="nav-link fw-semibold text-uppercase px-4 py-3 active text-black" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">製品説明</button>
                              <button class="nav-link fw-semibold text-uppercase px-4 py-3 text-black" id="nav-information-tab" data-bs-toggle="tab" data-bs-target="#nav-information" type="button" role="tab" aria-controls="nav-information" aria-selected="false" tabindex="-1">評価する</button>
                          </div>
                      </nav>
                      <div class="tab-content py-3" id="nav-tabContent">
                          <div class="tab-pane fade active show" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                            {{ product.description }}
                          </div>
                          <div class="tab-pane fade" id="nav-information" role="tabpanel" aria-labelledby="nav-information-tab">
                            Reviews...
                          </div>
                        </div>
                  </div>
              </div>
              <div class="col-lg-3">
                  <div class="col-inner">
                      <h5 class="title-side">他の製品</h5>
                      <div class="row pt-2 g-4">
                        {% for product in collections.best-products.products limit:2 %}
                            <div class="col-lg-12">
                              <div class="col-inner">
                                <div class="box-product">
                                    <div class="img-product">
                                      <a href="{{ product.url | within: collection }}">
                                        <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
                                      </a>
                                    </div>
                                    <div class="box-title-product">
                                        <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
                                        <div class="price-product">
                                            <p>{{ product.price | money }}</p><span>{{ variant.price | money_with_currency }}</span>
                                        </div>
                                    </div>
                                    <div class="box-rate-product">
                                        <div class="rate-product">
                                            {% render 'product-review' product: product %}
                                        </div>
                                        <div class="box-btn-add-cart">
                                            {% render 'product-card' product: product %}
                                        </div>
                                    </div>
                                </div>
                              </div>
                            </div>
                          {% endfor %}
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var quantityInput = document.getElementById('quantity');
        var minusButton = document.querySelector('.quantity-left-minus');
        var plusButton = document.querySelector('.quantity-right-plus');

        minusButton.addEventListener('click', function() {
            var currentValue = parseInt(quantityInput.value);
            if (!isNaN(currentValue) && currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        });

        plusButton.addEventListener('click', function() {
            var currentValue = parseInt(quantityInput.value);
            if (!isNaN(currentValue)) {
                quantityInput.value = currentValue + 1;
            }
        });
    });
</script>