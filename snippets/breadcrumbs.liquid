{{ 'breadcrumbs.css' | asset_url | stylesheet_tag }}
<div class="container">
  <div class="breadcrums">
  <ul  aria-label="breadcrumbs">
    <li>
      <a href="{{ routes.root_url }}">Top</a>
    </li>
    {% if collection.url %}
      {% comment %} <li>
      <a href="{{ routes.all_products_collection_url }}">食品一覧</a>
      </li> {% endcomment %}
      {{ collection.title }}
    {% endif %}
    {% if template contains 'cart' %}
      <li>
      <span>カート</span></li>
    {% endif %}
    {% if template contains 'product' %}
      <li>
      <a href="{{ routes.all_products_collection_url }}">食品一覧</a>
      </li>
      <li>
        <span>
      {{ product.title }}</span></li>
    {% endif %}
    {% if template contains 'blog' %}
      {% if current_tags %}
        <li>
          <a href="{{ blog.url }}">{{ blog.title }}</a>
        </li>
        {{ current_tags }}
      {% else %}
        {{ blog.title }}
      {% endif %}
    {% endif %}
    {% if template contains 'article' %}
      <li>
      <a href="{{ blog.url }}" title="{{ blog.title | escape }}">{{ blog.title }}</a>
      </li>
      {{ article.title }}
    {% endif %}
    {% if template contains 'page' %}
      <li><span>
      {{ page.title }}</span></li>
    {% endif %}
    {% if template contains 'search' %}
      <li><span>
      {{ 'sections.breadcrumbs.search' | t }}</span></li>
    {% endif %}
    {% if template contains 'customers' %}
      <li><span>
      {{ 'sections.breadcrumbs.my_account' | t }}<span></li>
    {% endif %}
  </ul>
</div>
</div>