<div class="container">
  <div class="breadcrums">
  <ul  aria-label="breadcrumbs">
    <li>
      <a href="{{ routes.root_url }}">トップ</a>
    </li>
    {% if collection.url %}
      {% comment %} <li>
      <a href="{{ routes.all_products_collection_url }}">食品一覧</a>
      </li> {% endcomment %}
      <li>
        <a href="/collections/all"><span>{{ collection.title }}</span></a></li>
      
    {% endif %}
    {% if template contains 'collections' %}
      <li><a href="/collections/all"><span>商品</span></a></li>
    {% endif %}
    {% if template contains 'cart' %}
      <li>
      <span>カート</span></li>
    {% endif %}
    {% if template contains 'product' %}
      <li>
      <a href="{{ routes.all_products_collection_url }}">食品一覧</a>
      </li>
      <li>
        <span>
      {{ product.title }}</span></li>
    {% endif %}
    {% if template contains 'blog' %}
      {% if current_tags %}
        <li>
          <a href="{{ blog.url }}">{{ blog.title }}</a>
        </li>
        <li>
        <span>{{ current_tags }}</span></li>
        {{ current_tags }}
      {% else %}
      <li><span>
        {{ blog.title }}</span></li>
      {% endif %}
    {% endif %}
    {% if template contains 'article' %}
      <li>
        <a href="{{ blog.url }}" title="{{ blog.title | escape }}">{{ blog.title | escape }}</a>
      </li>
      <li>
        <span>{{ article.title }}</span></li>
      
    {% endif %}
    {% if template contains 'page' %}
      <li><span>
      {{ page.title }}</span></li>
    {% endif %}
    {% if template contains 'search' %}
      <li><span>
      Search</span></li>
    {% endif %}
    {% if template contains 'customers' %}
      <li><span>Account</span></li>
    {% endif %}
  </ul>
</div>
</div>